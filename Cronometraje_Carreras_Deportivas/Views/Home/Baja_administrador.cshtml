@model dynamic

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<nav class="navbar navbar-expand-sm header">
    <div class="container-fluid">
        <img src="https://wp.uaslp.mx/informe/wp-content/uploads/sites/2/2024/04/UASLP.png" alt=""
             style="max-width: 15%;">
    </div>
</nav>

<body>
    <main>
        <div class="container-fluid d-flex justify-content-center mt-2">
            <div class="container border border-2 border-black rounded rounded-4 m-0 p-0" style="width: 60%;">
                <div class="cardHeader mbg ps-3 py-2 m-0 rounded-top-4">
                    <h1 style="color: white;">Eliminar Usuario</h1>
                </div>
                <div class="container-fluid py-4">
                    <h3 class="text-center">Ingresa tus credenciales para poder continuar</h3>

                    <form asp-action="Baja_administrador" method="post">
                        <div class="row my-1 py-1 px-5">
                            <label for="existentUser" class="col-sm-2 col-lg-4 col-form-label col-form-label-lg">Usuario a eliminar: </label>
                            <div class="col-sm-10 col-lg-8">
                                <input type="text" class="form-control form-control-lg" id="existentUser" name="usuario" placeholder="Usuario" required>
                            </div>
                        </div>
                        <div class="row my-1 py-1 px-5 d-flex align-items-center">
                            <label for="superadminUser" class="col-sm-2 col-lg-4 col-form-label col-form-label-lg">Usuario de superadministrador:</label>
                            <div class="col-sm-10 col-lg-8">
                                <input type="text" class="form-control form-control-lg" id="superadminUser" name="superUsuario" placeholder="Usuario superadministrador" required>
                            </div>
                        </div>
                        <div class="row py-1 px-5 my-1 d-flex align-items-center">
                            <label for="superadminPassword" class="col-sm-2 col-lg-4 col-form-label col-form-label-lg">Contraseña de superadministrador:</label>
                            <div class="col-sm-10 col-lg-8">
                                <input type="password" class="form-control form-control-lg" id="superadminPassword" name="superContrasena" placeholder="Contraseña superadministrador" required>
                            </div>
                        </div>

                        <div class="cardFooter d-flex justify-content-around pb-3">
                            <button type="button" class="btn btn-danger">
                                <a href="@Url.Action("Index", "Home")" class="text-white text-decoration-none">Cancelar</a>
                            </button>
                            <button type="submit" class="btn btn-primary mbg">Eliminar Usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

