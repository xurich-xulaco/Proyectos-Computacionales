                            <div class="col-sm-6">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-6 col-form-label">categoria</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            <div style="display: flex; justify-content: space-between; margin-top: 20px;">
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Pantalla_ini", "Home")'">Cancelar</button>
                <button type="submit" class="btn btn-danger">eliminar</button>
            </div>
            </div>

       
        </div>
    </div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/GL5U4Uqf5iC+NrQgiVdK33s5i5LlFnCjkHrC6s1" crossorigin="anonymous"></script>
<script>
    // Mostrar el mensaje de éxito y redirigir a la página de inicio de sesión después de unos segundos
    document.addEventListener("DOMContentLoaded", function() {
        var successAlert = document.querySelector(".alert-success");
        if (successAlert) {
            setTimeout(function() {
                window.location.href = '@Url.Action("Index", "Home")';
            }, 2000); // Redirige después de 2 segundos
        }
    });
</script>

