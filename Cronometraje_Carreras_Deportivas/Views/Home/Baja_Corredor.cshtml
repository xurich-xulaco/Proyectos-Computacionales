                        <div class="row mb-3">
                            <label class="col-sm-6 col-form-label">Nombre</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-6 col-form-label">Apellido paterno</label>
                            <div class="col-sm-6">
